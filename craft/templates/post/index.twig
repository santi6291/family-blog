{% extends "_layout" %}
{% import '_macros/_import.twig' as sections %}
{% paginate craft.entries.section('post').limit(10) as pageInfo, pageEntries %}

{% block content %}
    
    {% for entry in pageEntries %}
        {{ sections.spotlight({
            entry: entry,
            index: loop.index
        }) }}
    {% endfor %}
{% endblock %}

{% block footer %}
    {% if pageInfo.totalPages > 1 %}
        {{ sections.pagination(pageInfo) }}
    {% endif %}
{% endblock %}