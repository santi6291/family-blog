{% macro main(params) %}
    {# /examples#reference-spotlight #}
    <!-- Spotlight -->
    {% set styles = ['style1'] %}
    {% set intro = params.index is odd ? 'onscroll-content-fade-left' : 'onscroll-content-fade-right' %}

    {% set orientation = params.index is odd ? 'orient-right' : 'orient-left' %}
    <section class="spotlight {{ random(styles) }} {{ orientation }} content-align-left image-position-center {{ intro }} onscroll-image-fade-in">
        <div class="content">
            <h2>{{ params.entry.title }}</h2>
            {{ params.entry.body }}
            <ul class="actions vertical">
                <li><a href="{{ params.entry.url }}" class="button">Read more &gt;</a></li>
            </ul>
        </div>
        <div class="image">
            <img src="sample-images/spotlight01.jpg" alt="" />
        </div>
    </section>
    {# <section class="spotlight style1 orient-left content-align-left image-position-center onscroll-image-fade-in"> #}
{% endmacro %}